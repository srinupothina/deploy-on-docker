pipeline {
    agent {
        node {
            label 't059-runner'
        }
    }

    stages {
        stage('Tag and Push to Docker Hub') {
            steps {
                script {
                    def remoteServer = '3.85.15.246'
                    def remoteUser = 'ubuntu'
                    def remoteDockerImage = 'tomcat'
                    def imageName = "srinu9666/promote-release:${env.BUILD_NUMBER}"
                    def latestImageName = "srinu9666/promote-release:latest"

                    withCredentials([
                        usernamePassword(credentialsId: 'dockerhubcreds', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')
                    ]) {
                        sshagent(credentials: ['t059']) {
                            sh """
                                ssh -o StrictHostKeyChecking=no -l ${remoteUser} ${remoteServer} 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD &&
                                docker tag ${remoteDockerImage}:v1 ${imageName} &&
                                docker tag ${remoteDockerImage}:v1 ${latestImageName} &&
                                docker push ${imageName} &&
                                docker push ${latestImageName} &&
                                docker logout'
                            """
                        }
                    }
                }
            }
        }
    }
}
